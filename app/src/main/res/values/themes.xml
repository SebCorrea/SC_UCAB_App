<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SCApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="PrimaryButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#000000</item>
    </style>

    <style name="dateCalendarStyle">
        <item name="android:background">@drawable/calendar_background</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="dateCalendarText">
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>